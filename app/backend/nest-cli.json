{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "article": {
      "type": "library",
      "root": "libs/article",
      "entryFile": "index",
      "sourceRoot": "libs/article/src",
      "compilerOptions": {
        "tsConfigPath": "libs/article/tsconfig.lib.json"
      }
    },
    "plugins": {
      "type": "library",
      "root": "libs/plugins",
      "entryFile": "index",
      "sourceRoot": "libs/plugins/src",
      "compilerOptions": {
        "tsConfigPath": "libs/plugins/tsconfig.lib.json"
      }
    }
  }
}