{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "paths": {
      "my-lib": ["./dist/my-lib"],
      "plugin-banner": ["./dist/plugin-banner"],
      "plugin-logo": [
        "./dist/plugin-logo"
      ],
      "plugin-banner-slider": [
        "./dist/plugin-banner-slider"
      ],
      "plugin-contact-info": [
        "./dist/plugin-contact-info"
      ],
      "plugin-heading": [
        "./dist/plugin-heading"
      ],
      "plugin-list-of-products": [
        "./dist/plugin-list-of-products"
      ],
      "@plugins/common-libraries": [
        "./dist/plugins-common-libraries"
      ],
      "plugins-banner-slider": [
        "./dist/plugins-banner-slider"
      ]
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
